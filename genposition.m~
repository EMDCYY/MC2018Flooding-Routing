function position = genposition(number, range)
    position = [[1:number]',rand(number,2)*range - range/2]; 
    
    %%figure
    fig_position = figure; 
    x= [position(:,1)];
    y= [position(:,2)];
    plot(x,y,'o', 'MarkerEdgeColor','k',...      % plot larger red circles with black edges
                  'MarkerFaceColor','r',...
                  'MarkerSize',8);
    plot(0,0, '--gs')
    axis([-range/2-1,range/2+1,-range/2-1,range/2+1]);                               % set the axis limits
end